{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"importHelpers": true,
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"~/*": ["packages/*"]
		},
		"types": ["element-plus/global"],
		"declaration": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"packages/**/**/*",
		"packages/**/*",
		"types/*.d.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
  "exclude": ["node_modules", "dist"]
}
